generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(cuid())
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  twitterId       String          @unique
  username        String
  name            String?
  profileImageUrl String?
  accounts        Account[]
  sessions        Session[]
  tokenLaunches   TokenLaunches[]

  @@index([twitterId])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model TokenLaunches {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  poolObjectId    String   @unique
  creatorAddress  String
  twitterUserId   String
  twitterUsername String
  hideIdentity    Boolean  @default(false)
  tokenTxHash     String
  poolTxHash      String
  user            User     @relation(fields: [twitterUserId], references: [twitterId], onDelete: SetNull)

  @@index([twitterUserId])
  @@index([creatorAddress])
  @@index([poolObjectId])
  @@map("token_launches")
}

model Referral {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  walletAddress String   @unique
  referralCode  String   @unique
  totalEarned   BigInt   @default(0)
  totalTrades   Int      @default(0)

  @@index([walletAddress])
  @@index([referralCode])
  @@map("referrals")
}

model TokenProtectionSettings {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  poolId    String   @unique
  settings  Json

  @@index([poolId])
  @@map("token_protection_settings")
}

model TwitterAccountUserBuyRelation {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  twitterUserId   String
  twitterUsername String   @default("")
  poolId          String
  address         String
  purchases       Json

  @@index([twitterUserId, poolId])
  @@index([poolId])
  @@map("twitter_account_user_buy_relation")
}
